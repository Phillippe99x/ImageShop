<h2 class="first">{{ 'Fetch latest document changes from ImageShop'|t('imageshop-dam') }}</h2>
<form class="utility" method="post" accept-charset="UTF-8" style="margin-top: 2rem;">

    {{ actionInput('imageshop-dam/default/get-changed-documents') }}
    {{ csrfInput() }}
    {{ redirectInput('utilities/imageshop-dam') }}

    <div class="buttons">
        <button type="submit" class="btn submit">{{ 'Fetch updated documents'|t('imageshop-dam') }}</button>
        <div class="utility-status"></div>
    </div>
</form>

<h2>{{ 'Update ImageShop images in database'|t('imageshop-dam') }}</h2>
<form class="utility" method="post" accept-charset="UTF-8" style="margin-top: 2rem;">

    {{ actionInput('imageshop-dam/default/create-sync-jobs') }}
    {{ csrfInput() }}
    {{ redirectInput('utilities/imageshop-dam') }}
    {% if not canRunDbUpdate %}
        {{ 'Please fetch the updated documents from imageshop servers before updating images in the database'|t('imageshop-dam') }}
    {% endif %}
    <div class="buttons">
        <button type="submit" class="btn submit"{% if not canRunDbUpdate %} disabled{% endif %}>{{ 'Sync images'|t('imageshop-dam') }}</button>
        <div class="utility-status"></div>
    </div>
</form>
